{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./types",
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
